{
    "name": "Colorbar",
    "description": "Generates a colorbar to lay over the image",
    "inputs": {
        "colormap": {
            "type": "select",
            "desc": "Name of the Colormap",
            "htmlType":
            {
                "type": "select",
                "default": "default",
                "values": [
                    "default",
                    "greyscale",
                    "stretched",
                    "fastie"
                ]
            }
        },
        "x": {
            "type": "integer",
            "desc": "X-position of the image on which the new image is overlayed",
            "htmlType":
            {
                "type": "number",
                "default": 0
            }
        },
        "y": {
            "type": "integer",
            "desc": "Y-position of the image on which the new image is overlayed",
            "htmlType":
            {
                "type": "number",
                "default": 0
            }
        },
        "h": {
            "type": "integer",
            "desc": "height of the colorbar",
            "htmlType":
            {
                "type": "number",
                "default": 10
            }
        }
    },
    "length": 4,
    "docs-link":"https://github.com/publiclab/image-sequencer/blob/main/docs/MODULES.md"
}